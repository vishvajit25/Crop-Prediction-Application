<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CropPrediction" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/farm_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sun_yellow</item>
        <item name="colorSecondaryVariant">@color/farm_mud</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="bottomNavigationStyle">@color/bottom_nav_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SearchButtonTheme">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="LanguageSwitchTheme">
        <item name="colorPrimary">@color/background_green</item>
    </style>
    <style name="NextPrevPageTheme">
        <item name="colorPrimary">@color/dark_green</item>
    </style>

    <style name="VoiceTheme">
        <item name="colorPrimary">@color/grey</item>
    </style>

    <style name="SpinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/exo_2_bold</item>
    </style>

    <style name="bottom_nav" parent="@style/Animation.Design.BottomSheetDialog">
        <item name="android:textSize">15dp</item>
        <item name="colorPrimary">@color/bottom_nav_color</item>
    </style>

    <style name="button_links" parent="@style/Theme.Design">
        <item name="colorPrimary">@color/orange_yellow</item>
    </style>

    <style name="button_dealers" parent="@style/Theme.Design">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="button_connect_to_links" parent="@style/Theme.Design">
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="info_frag_titlebar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:windowTitleBackgroundStyle">@color/white</item>
    </style>

    <style name="cancel_button" parent = "@style/Theme.CropPrediction">
        <item name="backgroundColor">@color/red</item>
        <item name = "colorPrimary">@color/red</item>
    </style>

    <style name="download_button" parent = "@style/Theme.CropPrediction">
        <item name="backgroundColor">@color/black</item>
        <item name = "colorPrimary">@color/black</item>
    </style>



</resources>