<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="107dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/crop_image"
                        android:layout_width="88dp"
                        android:layout_height="85dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY" />

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="107dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp">

                            <TextView
                                android:id="@+id/crop_name"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:gravity="left"
                                android:lines="1"
                                android:maxLines="2"
                                android:paddingLeft="0dp"
                                android:text="Sunflower"
                                android:textColor="@color/dark_green"
                                android:textSize="27dp"
                                tools:ignore="DuplicateIds" />

                            <TextView
                                android:id="@+id/crop_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="32dp"
                                android:layout_marginTop="13dp"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="99"
                                android:textColor="@color/farm_mud"
                                android:textSize="30dp"
                                android:textStyle="bold"
                                tools:ignore="DuplicateIds" />

                            <TextView
                                android:id="@+id/percentage_sign"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginBottom="7dp"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingLeft="1dp"
                                android:text="%"
                                android:textColor="@color/farm_mud"
                                android:textSize="22dp"
                                tools:ignore="DuplicateIds" />

                        </LinearLayout>


                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                      </LinearLayout>


                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/button_yes"
                    android:background="@drawable/ic_check"
                    ></Button>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="32dp"
                    android:id="@+id/button_no"
                    android:background="@drawable/ic_cancel"
                    android:theme="@style/cancel_button"
                    ></Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/red_dark"
                    android:text="â‚¹"></TextView>

                <TextView
                    android:id="@+id/crop_price_estimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/red_dark"
                    android:text="Price"></TextView>

                <Button
                    android:id="@+id/button_download_pdf"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="92dp"
                    android:background="@drawable/ic_download"
                    android:theme="@style/download_button"></Button>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
