<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".see_more">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:alpha="0.4"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_green"
        android:text="Kharif"
        android:id="@+id/bk"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/br"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/light_green"
        android:text="Rabi"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="140dp"/>


    <Button
        android:id="@+id/bz"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/light_green"
        android:text="Zaid"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="280dp" />

    <TextView
        android:id="@+id/n"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/bk"
        android:fontFamily="@font/bold"
        android:text="Nitrogen : "
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/nitk"
        android:foregroundGravity="center"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/nk"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/nitr"
        android:foregroundGravity="center"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/nr"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/nitz"
        android:layout_marginLeft="105dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/nz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bk"
        android:text="potash : "
        android:layout_marginTop="200dp"
        android:fontFamily="@font/bold"
        tools:ignore="MissingConstraints"
        android:id="@+id/p"/>

    <ImageView
        android:id="@+id/pk"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/potz"
        android:foregroundGravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/pr"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/potr"
        android:foregroundGravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints"  />
    <ImageView
        android:id="@+id/pz"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/potz"
        android:foregroundGravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bk"
        android:text="Phosphorus : "
        android:layout_marginTop="380dp"
        android:fontFamily="@font/bold"
        tools:ignore="MissingConstraints"
        android:id="@+id/ph"/>

    <ImageView
        android:id="@+id/phk"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/phosk"
        android:foregroundGravity="center"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints"  />
    <ImageView
        android:id="@+id/phr"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/phosr"
        android:foregroundGravity="center"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/phz"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/n"
        android:src="@drawable/phosz"
        android:foregroundGravity="center"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/light_green"
        android:text="BACK"
        android:textColor="@color/black" />


</RelativeLayout>